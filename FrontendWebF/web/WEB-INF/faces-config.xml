<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <navigation-rule>
            <from-view-id>index.xhtml</from-view-id>
            <navigation-case>
                  <from-outcome>teacher</from-outcome>
                  <to-view-id>courselist_teacher.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                  <from-outcome>student</from-outcome>
                  <to-view-id>courselist_student.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                  <from-outcome>error</from-outcome>
                  <to-view-id>error.xhtml</to-view-id>
            </navigation-case>           
            <navigation-case>
                  <from-outcome>failure</from-outcome>
                  <to-view-id>failure.xhtml</to-view-id>
            </navigation-case>
    </navigation-rule>
    <navigation-rule>
            <from-view-id>courselist_teacher.xhtml</from-view-id>
            <navigation-case>
                  <from-outcome>coursedetail</from-outcome>
                  <to-view-id>coursedetail.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                  <from-outcome>courselist</from-outcome>
                  <to-view-id>courselist_teacher.xhtml</to-view-id>
            </navigation-case>
    </navigation-rule>
     <navigation-rule>
            <from-view-id>coursedetail.xhtml</from-view-id>
            <navigation-case>
                  <from-outcome>courselist</from-outcome>
                  <to-view-id>courselist_teacher.xhtml</to-view-id>
            </navigation-case>
            
     </navigation-rule>
     <navigation-rule>
            <navigation-case>
                <from-view-id>courselist_student.xhtml</from-view-id>
                  <from-outcome>allCourses</from-outcome>
                  <to-view-id>courselistAll.xhtml</to-view-id>
            </navigation-case>
     </navigation-rule> 
    <navigation-rule>
            <from-view-id>newCourse.xhtml</from-view-id>
            <navigation-case>
                  <from-outcome>updateCourse</from-outcome>
                  <to-view-id>courselist_teacher.xhtml</to-view-id>
            </navigation-case>        
     </navigation-rule>
      <navigation-rule>
          <from-view-id>courselist_teacher.xhtml</from-view-id>
            <navigation-case>               
                  <from-outcome>allCourses</from-outcome>
                  <to-view-id>courselistAll.xhtml</to-view-id>
            </navigation-case>
     </navigation-rule>                           
    <managed-bean>
            <managed-bean-name>login</managed-bean-name>
            <managed-bean-class>webf.beans.ws.Login</managed-bean-class>
            <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
</faces-config>
